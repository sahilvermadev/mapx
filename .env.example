# ============================================
# REKKY Application Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# Database Configuration
# ============================================
DB_NAME=rekky_db
DB_USER=appuser
DB_PASSWORD=your_secure_password_here

# ============================================
# Backend Configuration
# ============================================
# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# Session Secret - Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_at_least_32_characters_long

# Server Port (default: 5000)
PORT=5000

# Node Environment (development, production, test)
NODE_ENV=development

# ============================================
# Google OAuth Configuration
# ============================================
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# Redis Configuration
# ============================================
# For Docker Compose, use: redis://redis:6379
# For local development, use: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# For development: http://localhost:5173,http://localhost:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Frontend URLs (for OAuth redirects)
# ============================================
# Backend URL - Used for OAuth callbacks
# Development: http://localhost:5000
# Production: https://yourdomain.com (without port)
BACKEND_URL=http://localhost:5000

# Frontend URL - Used for OAuth redirects
# Development: http://localhost:5173
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:5173

# ============================================
# AI Services (Optional but Recommended)
# ============================================
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
# Format: sk-...
OPENAI_API_KEY=sk-your_openai_api_key_here

# Groq API Key - Get from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# Google Maps Configuration
# ============================================
# Google Maps API Key - Get from: https://console.cloud.google.com/
# Enable: Maps JavaScript API, Places API, Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Maps Custom Map ID (optional)
# Create at: https://console.cloud.google.com/google/maps-apis/studio
VITE_GOOGLE_MAPS_MAP_ID=your_custom_map_id_here

# ============================================
# Mapbox Configuration (Optional)
# ============================================
# Mapbox Access Token - Get from: https://account.mapbox.com/
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ============================================
# Frontend Environment Variables (VITE_ prefix)
# ============================================
# These are used during frontend build time
# API Base URL - For development: http://localhost:5000/api
# For production with reverse proxy: /api
VITE_API_BASE_URL=http://localhost:5000/api

# Backend URL for frontend - Used for OAuth
# Development: http://localhost:5000
# Production: https://yourdomain.com (without port)
VITE_BACKEND_URL=http://localhost:5000

# ============================================
# pgAdmin Configuration (Optional - for database management)
# ============================================
PGADMIN_EMAIL=admin@rekky.com
PGADMIN_PASSWORD=admin123

# ============================================
# Production-Specific Settings
# ============================================
# Uncomment and configure for production:

# Enable HTTPS redirects
# FORCE_HTTPS=true

# Trust proxy (if behind reverse proxy like nginx)
# TRUST_PROXY=true
